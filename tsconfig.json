{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    // This is the critical change: defines the '@' alias for TypeScript.
    "baseUrl": ".",
    "paths": {
      "@/*": ["client/src/*"]
    }
  },
  // This is also a critical change: simplifies the scope to just the client app.
  "include": ["client"]
}
